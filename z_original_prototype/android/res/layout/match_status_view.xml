<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	
		<LinearLayout
		    xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical" >

	   		<FrameLayout
	           android:id="@+id/match_detail_header_frame"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_alignTop="@+id/countdown"
	           android:layout_centerHorizontal="true">		      
	
				 <RelativeLayout
				     android:id="@+id/match_detail_header_rlayout"
				     android:layout_width="fill_parent"
				     android:layout_height="wrap_content" >
		   		    
		             <LinearLayout
		                 android:id="@+id/match_detail_header_llayout"
		                 android:layout_width="wrap_content"
		                 android:layout_height="match_parent"
		                 android:layout_alignParentBottom="true"
		                 android:orientation="vertical"
		                 android:paddingLeft="10dp"
		                 android:paddingTop="10dp" >
		
		                <TextView
		                    android:id="@+id/match_detail_match_name"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:text="Match: 2xazin8"
		                    android:textAppearance="?android:attr/textAppearanceLarge" />
		
		                <TextView
		                    android:id="@+id/match_detail_match_type"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:text="Type: assassins"
		                    android:textAppearance="?android:attr/textAppearanceMedium" />
		
		                <TextView
		                    android:id="@+id/match_detail_match_subtitle"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:text="watch your back"
		                    android:textAppearance="?android:attr/textAppearanceSmall" />
	               	</LinearLayout>
		               	
			             <ImageView
			                android:id="@+id/match_detail_matchtype"
			                android:layout_width="66dp"
			                android:layout_height="66dp"
			                android:layout_alignParentRight="true"
			                android:layout_centerVertical="true"
			                android:layout_marginRight="14dp"
			                android:paddingTop="10dp" />
		      		</RelativeLayout>
	         	</FrameLayout>
	        
				<FrameLayout
		           android:id="@+id/match_detail_time_frame"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_alignTop="@+id/countdown">
		
			             <LinearLayout
			                 android:id="@+id/match_detail_time_llayout"
			                 android:layout_width="wrap_content"
			                 android:layout_height="match_parent"
			                 android:orientation="vertical"
			                 android:paddingLeft="10dp"
			                 android:paddingTop="10dp" >
		
			                 <TextView
			                     android:id="@+id/match_detail_time_label"
			                     android:layout_width="wrap_content"
			                     android:layout_height="fill_parent"
			                     android:layout_alignParentLeft="true"
			                     android:layout_alignParentRight="true"
			                     android:text="Match Begins in:"
			                     android:textAppearance="?android:attr/textAppearanceMedium" />
		
			                 <TextView
			                     android:id="@+id/match_detail_start_time"
			                     android:layout_width="wrap_content"
			                     android:layout_height="fill_parent"
			                     android:layout_alignParentLeft="true"
			                     android:layout_alignParentRight="true"
			                     android:text="5 days 3 hours"
			                     android:textAppearance="?android:attr/textAppearanceLarge" />
			             </LinearLayout>
		
			     </FrameLayout>
		
				<FrameLayout
				    xmlns:android="http://schemas.android.com/apk/res/android"
				    android:id="@+id/match_detail_bounds_frame"
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:paddingLeft="10dp"
			        android:paddingTop="10dp"  >
				   <LinearLayout
				    xmlns:android="http://schemas.android.com/apk/res/android"
				    android:id="@+id/match_detail_bounds_llayout"
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:orientation="vertical"
			        android:paddingTop="10dp"  > 
				     <TextView
			                     android:id="@+id/match_detail_location_label"
			                     android:layout_width="wrap_content"
			                     android:layout_height="fill_parent"
			                     android:layout_alignParentLeft="true"
			                     android:layout_alignParentRight="true"
			                     android:text="Location: Lindon, Utah"
			                     android:textAppearance="?android:attr/textAppearanceLarge" />
				    
				    <com.google.android.maps.MapView
				        xmlns:android="http://schemas.android.com/apk/res/android"
				        android:id="@+id/match_detail_map_view"
				        android:layout_width="200dp"
				        android:layout_height="250dp"
				        
				        android:apiKey="@string/mapKey"
		
				        android:clickable="true"
				        android:enabled="true" >
				    </com.google.android.maps.MapView>
				    </LinearLayout>
				</FrameLayout>
				
			   <LinearLayout
				    xmlns:android="http://schemas.android.com/apk/res/android"
				    android:id="@+id/match_detail_player_llayout"
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    android:orientation="vertical"
			        android:paddingTop="10dp"  >            
	                <TextView
	                    android:id="@+id/match_detail_players_title"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="Players:"
	                   	android:paddingLeft="10dp"
	                    android:textAppearance="?android:attr/textAppearanceLarge" />

			       <ListView
			           android:id="@+id/match_detail_players_list"
			           android:layout_width="match_parent"
			           android:layout_height="wrap_content"
			           android:paddingLeft="5dp" >

			       </ListView>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>