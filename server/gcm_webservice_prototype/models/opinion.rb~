require 'data_mapper'

class Opinion
  include DataMapper::Resource
  property :id, DataMapper::Property::Serial
  property :aspect_word, String
  property :opinion_word, String
  property :polarity, Integer  # -10 to 10

  belongs_to :sentence
  belongs_to :aspect, :required = false

  property :created_at, DateTime
  property :updated_at, DateTime 
end

#temporary for storing intermediate opinion words used in the nlp process
class OpinionWord
  include DataMapper::Resource
  property :id, DataMapper::Property::Serial
  
  property   :word, String
  belongs_to :product  
  
  property :created_at, DateTime
  property :updated_at, DateTime 
end


