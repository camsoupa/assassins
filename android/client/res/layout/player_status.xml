<?xml version="1.0" encoding="utf-8"?>
<com.nbs.client.assassins.views.PlayerStatus xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="horizontal" >

        <TextView
            android:id="@+id/player_username"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="player_name"
            android:textColor="?android:attr/textColorSecondaryInverse"
            android:textAppearance="?android:attr/textAppearanceSmall" />


        <TextView
            android:id="@+id/player_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ready?"
            android:textAlignment="textEnd"
            android:textColor="?android:attr/textColorSecondaryInverse"
            android:textAppearance="?android:attr/textAppearanceSmall" />
</com.nbs.client.assassins.views.PlayerStatus>