<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="wrap_content"
	android:background="@color/gray" android:orientation="horizontal"
	android:layout_gravity="bottom">

	<LinearLayout android:layout_width="0px"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:layout_marginLeft="8dp"
		android:gravity="left" android:layout_weight="1">
		<TextView android:id="@+id/hud_trange" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="@color/white"
			android:textSize="14sp" android:textStyle="bold" android:text="-" />
		<TextView android:id="@+id/hud_label_trange"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="@color/white" android:textSize="12sp"
			android:text="target range" />
		<TextView android:id="@+id/hud_erange" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="@color/white"
			android:textSize="14sp" android:textStyle="bold" android:text="-"
			android:paddingTop="4dp" />
		<TextView android:id="@+id/hud_label_erange"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="@color/white" android:textSize="12sp"
			android:text="enemy range" />

	</LinearLayout>

	<LinearLayout android:layout_width="0px"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:layout_weight="1" android:gravity="center">

		<TextView android:id="@+id/hud_attack" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="@color/white"
			android:text="Attack" android:textSize="20dp" android:textStyle="bold" />

		<TextView android:id="@+id/hud_escape_time_remaining"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:text="" android:textColor="@color/white" android:textSize="20sp"
			android:textStyle="bold" />
		<TextView android:id="@+id/hud_tbearing"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="@color/DarkGray" android:textSize="12sp"
			android:text="" />

	</LinearLayout>

	<LinearLayout android:layout_width="0px"
		android:layout_height="match_parent" android:gravity="right"
		android:layout_marginRight="8dp"
		android:layout_weight="1" android:orientation="horizontal">

		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:layout_marginRight="8dp">

			<TextView android:id="@+id/hud_label_life"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="@color/white" android:layout_gravity="right"
				android:textSize="14sp" android:text="me" />

			<TextView android:id="@+id/hud_label_target_life"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="target" android:layout_gravity="right"
				android:textColor="@color/white" android:textSize="14sp" />
		</LinearLayout>

		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:orientation="vertical">

			<ProgressBar android:id="@+id/hud_my_life"
				style="?android:attr/progressBarStyleHorizontal"
				android:layout_width="40dp" android:layout_height="wrap_content"
				android:layout_gravity="right" android:max="3" android:progress="0" />

			<ProgressBar android:id="@+id/hud_target_life"
				style="?android:attr/progressBarStyleHorizontal"
				android:layout_width="40dp" android:layout_height="wrap_content"
				android:layout_gravity="right" android:max="3" android:progress="0" />

			<TextView android:id="@+id/hud_label_life_remaining"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="life" android:layout_gravity="right|bottom"
				android:paddingTop="4dp" android:textColor="@color/white"
				android:textSize="14sp" />
		</LinearLayout>

	</LinearLayout>

</LinearLayout>