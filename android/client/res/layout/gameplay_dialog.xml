<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center_horizontal|top"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewGameplayParamsMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="Consider GPS accuracy when tuning distance parameters."
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:id="@+id/linearLayoutHuntRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >
            
        <LinearLayout
	        android:id="@+id/linearLayoutHuntRangeLayout"
	        android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
    
	        <TextView
	            android:id="@+id/textViewHuntRange"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Hunt range: "
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	       	<TextView
	            android:id="@+id/textViewHuntRangeValue"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="5 ft"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
        
        <SeekBar
            android:id="@+id/seekBarHuntRange"
            android:layout_width="match_parent"
            android:max="10000"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewHuntRangeDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The distance at which a hunter can see their target's location."
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutAttackRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >
            
        <LinearLayout
	        android:id="@+id/linearLayoutAttackRangeLabels"
	        android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	       	
	        <TextView
	            android:id="@+id/textViewAttackRange"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Attack range: "
	            android:textAppearance="?android:attr/textAppearanceMedium" />
        	       	<TextView
	            android:id="@+id/textViewAttackRangeValue"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="5 ft"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
        <SeekBar
            android:id="@+id/seekBarAttackRange"
            android:layout_width="match_parent"
            android:max="9999"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The distance at which a hunter can strike."
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearLayoutAttackDelay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <LinearLayout
	        android:id="@+id/linearLayoutAttackDelayLabels"
	        android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	        <TextView
	            android:id="@+id/textViewAttackDelay"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Escape time: "
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	        <TextView
	            android:id="@+id/textViewAttackDelayValue"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="180 sec"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
		</LinearLayout>
        <SeekBar
            android:id="@+id/seekBarAttackDelay"
            android:layout_width="match_parent"
            android:max="500"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewAttackDelayDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The time that a hunter has to wait to attack again."
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

</LinearLayout>